{
  "name": "remote-volume",
  "version": "1.1.0",
  "description": "Control system volume via WebSocket - Headless Edition",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --linux tar.gz",
    "build:all": "electron-builder -mwl"
  },
  "keywords": ["volume", "websocket", "remote", "headless"],
  "author": "Ultimate GmbH (Headless mod)",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^8.1.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "electron": "^25.3.1",
    "electron-builder": "^24.6.3"
  },
  "build": {
    "appId": "com.ultimate.remotevolume.headless",
    "productName": "RemoteVolume",
    "files": [
      "main.js",
      "volumeController.js",
      "icon.png",
      "icon.ico",
      "menuicon.png"
    ],
    "linux": {
      "target": ["tar.gz"],
      "category": "Utility",
      "icon": "icon.png"
    },
    "mac": {
      "target": ["tar.gz"],
      "category": "public.app-category.utilities",
      "icon": "icon.png"
    },
    "win": {
      "target": ["portable"],
      "icon": "icon.ico"
    }
  }
}
